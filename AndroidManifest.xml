<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.badlogic.androidgames.gamedev2d"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="GameDev2DStarter"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_andoroid_basics_starter" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.badlogic.androidgames.gamedev2d.CannonTest"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:label="Cannon Screen Test"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="CannonGravityTest"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:label="Cannon Grravity Test"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="CollisionTest"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:label="Collision Test"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="Camera2DTest"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:label="Camera2D Test"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="TextureAtlasTest"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:label="Texture Atlas Test"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>